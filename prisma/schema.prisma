datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Languages {
  I
  E
  D
  S
  F
  NL
  CHIN
  JAP
  RU
}

model Auction {
  id      String      @id @default(cuid())
  name    String
  date    DateTime
  lots    Lot[]
  callers Caller[]
}

model Lot {
  id          String      @id @default(cuid())
  description String?
  number      Int
  auctionId   String
  date        DateTime
  auction     Auction      @relation(fields: [auctionId], references: [id])
  assignments Assignment[]
}

model Caller {
  id             String      @id @default(cuid())
  name           String
  abbreviation   String
  languages      Languages[]
  auctions       Auction[]
  desiredBidders Bidder[]
  assignments    Assignment[]
}

model Bidder {
  id          String      @id @default(cuid())
  name        String
  languages   Languages[]
  phoneNumber String
  assignments Assignment[]
  Caller      Caller?      @relation(fields: [callerId], references: [id])
  callerId    String?
}

model Assignment {
  id       String      @id @default(cuid())
  isFinal  Boolean
  lotId    String
  bidderId String
  callerId String?
  lot      Lot     @relation(fields: [lotId], references: [id])
  bidder   Bidder  @relation(fields: [bidderId], references: [id])
  caller   Caller? @relation(fields: [callerId], references: [id])

  @@unique([lotId, bidderId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}
