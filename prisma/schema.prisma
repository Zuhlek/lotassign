datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Represents an item in the auction.
// It belongs to one auction and can have multiple allocations.
model Lot {
  id          String       @id @default(cuid())
  auctionId   String
  lotNumber   Int
  auction     Auction      @relation(fields: [auctionId], references: [id])
  allocations Allocation[]
  lotBidders  LotBidder[]
}

// Represents an auction event.
// It has a name, date, and multiple lots.
// It also has multiple callers (handled via the AuctionCaller join table).
model Auction {
  id      String          @id @default(cuid())
  name    String
  date    DateTime
  callers AuctionCaller[]
  lots    Lot[]
}

// Represents an employee who calls bidders.
// It has a name, abbreviation, languages, desired customers, and can participate in multiple auctions and allocations.
model Caller {
  id               String          @id @default(cuid())
  name             String
  abbreviation     String
  languages        String[]
  desiredCustomers Bidder[]        @relation("DesiredCustomers")
  auctions         AuctionCaller[]
  allocations      Allocation[]
}

// Represents a potential bidder.
// It has a name, languages, phone number, interested lots, and allocations.
model Bidder {
  id             String       @id @default(cuid())
  name           String
  languages      String[]
  phoneNumber    String
  interestedLots LotBidder[]
  allocations    Allocation[]
  caller         Caller?      @relation("DesiredCustomers", fields: [callerId], references: [id])
  callerId       String?
}

// Represents the assignment of a caller to a bidder for a lot.
// It includes foreign keys to the lot, bidder, and caller.
model Allocation {
  id       String @id @default(cuid())
  lotId    String
  bidderId String
  callerId String
  lot      Lot    @relation(fields: [lotId], references: [id])
  bidder   Bidder @relation(fields: [bidderId], references: [id])
  caller   Caller @relation(fields: [callerId], references: [id])
}

// A join table to handle the many-to-many relationship between auctions and callers.
model AuctionCaller {
  id        String  @id @default(cuid())
  auctionId String
  callerId  String
  auction   Auction @relation(fields: [auctionId], references: [id])
  caller    Caller  @relation(fields: [callerId], references: [id])
}

// A join table to handle the many-to-many relationship between lots and bidders.
model LotBidder {
  id       String @id @default(cuid())
  lotId    String
  bidderId String
  lot      Lot    @relation(fields: [lotId], references: [id])
  bidder   Bidder @relation(fields: [bidderId], references: [id])
}


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}
